<div id="clock"></div>

<div class="row second-row">
  <div id="weather-info">
    <%
      conditions = @weather['weather'].first
      icon = {
        '01d' => 'wi-day-sunny',
        '01n' => 'wi-night-clear',
        '02d' => 'wi-day-sunny-overcast',
        '02n' => 'wi-night-cloudy',
        '03d' => 'wi-day-cloudy',
        '03n' => 'wi-night-cloudy',
        '04d' => 'wi-cloudy',
        '04n' => 'wi-cloudy',
        '09d' => 'wi-rain',
        '09n' => 'wi-rain',
        '10d' => 'wi-day-rain',
        '10n' => 'wi-night-rain',
        '11d' => 'wi-day-thunderstorm',
        '11n' => 'wi-night-thunderstorm',
        '13d' => 'wi-day-snow',
        '13n' => 'wi-night-snow'
      }[conditions['icon']]
    %>
    <i class="conditions wi <%= icon %>"></i>

    <div class="current-temp">
      <i class="wi wi-thermometer"></i>
      <%= @weather['main']['temp'] %>&deg;
    </div>

    <div class="sun">
      <% if Time.now < @sunrise + (60 * 60) %>
        <i class="wi wi-sunrise"></i>
        <%= @sunrise.strftime('%l:%M%p').downcase %>
      <% else %>
        <i class="wi wi-sunset"></i>
        <%= @sunset.strftime('%l:%M%p').downcase %>
      <% end %>
    </div>
  </div>

  <div id="traffic-light">
    <div class="circle red"></div>
    <div class="circle yellow"></div>
    <div class="circle green"></div>
  </div>
</div>
